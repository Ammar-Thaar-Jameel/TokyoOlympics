<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_margin="@dimen/marginSmall"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/rank_of_the_team"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/rank_of_the_team_text"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="rank of the team"
            android:textSize="10dp"
            app:layout_constraintLeft_toLeftOf="@id/rank_of_the_team"
            app:layout_constraintRight_toRightOf="@id/rank_of_the_team"
            app:layout_constraintTop_toBottomOf="@id/rank_of_the_team" />

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="team_name" />

        <TextView
            android:id="@+id/team_name_text"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="team name"
            android:textSize="10dp"
            app:layout_constraintLeft_toLeftOf="@id/team_name"
            app:layout_constraintRight_toRightOf="@id/team_name"
            app:layout_constraintTop_toBottomOf="@id/team_name" />

        <TextView
            android:id="@+id/gold_medal"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/silver_medal"
            tools:text="gold_medal" />

        <TextView
            android:id="@+id/gold_medal_text"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/gold_medal"
            app:layout_constraintRight_toRightOf="@id/gold_medal"
            app:layout_constraintTop_toBottomOf="@id/gold_medal"
            tools:text="gold_medal" />

        <TextView
            android:id="@+id/silver_medal"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/gold_medal"
            app:layout_constraintRight_toLeftOf="@id/bronze_medal"
            app:layout_constraintTop_toTopOf="@id/gold_medal"
            tools:text="silver_medal" />

        <TextView
            android:id="@+id/silver_medal_text"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/silver_medal"
            app:layout_constraintRight_toRightOf="@id/silver_medal"
            app:layout_constraintTop_toBottomOf="@id/silver_medal"
            tools:text="silver_medal" />

        <TextView
            android:id="@+id/bronze_medal"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/silver_medal"
            app:layout_constraintRight_toLeftOf="@id/total_point"
            app:layout_constraintTop_toTopOf="@id/silver_medal"
            tools:text="bronze_medal" />

        <TextView
            android:id="@+id/bronze_medal_text"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/bronze_medal"
            app:layout_constraintRight_toRightOf="@id/bronze_medal"
            app:layout_constraintTop_toBottomOf="@id/bronze_medal"
            tools:text="bronze_medal" />

        <TextView
            android:id="@+id/total_point"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@id/bronze_medal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/bronze_medal"
            tools:text="total_point" />

        <TextView
            android:id="@+id/total_point_text"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="@id/total_point"
            app:layout_constraintRight_toRightOf="@id/total_point"
            app:layout_constraintTop_toBottomOf="@id/total_point"
            tools:text="totalpoint" />

        <TextView
            android:id="@+id/rank_of_the_team_by_total"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/rank_of_the_team_by_total_text"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="total rank of the team"
            android:textSize="10dp"
            app:layout_constraintLeft_toLeftOf="@id/rank_of_the_team_by_total"
            app:layout_constraintRight_toRightOf="@id/rank_of_the_team_by_total"
            app:layout_constraintTop_toBottomOf="@id/rank_of_the_team_by_total" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>