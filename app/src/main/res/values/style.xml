<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="RankOfTheTeam">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/black</item>

    </style>


    <style name="RankOfTheTeamText">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TeamName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MedalStyleText">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TotalPoint">
        <item name="android:layout_width">77dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">24dp</item>


    </style>

    <style name="ShapeImage">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ShapeImageMadel">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


</resources>



